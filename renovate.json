{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:best-practices"],
    "prHourlyLimit": 0,
    "branchConcurrentLimit": 0,
    "prConcurrentLimit": 0,
    "packageRules": [
        {
            "matchManagers": ["gomod", "dockerfile"],
            "automerge": true,
            "automergeType": "pr",
            "matchUpdateTypes": ["minor", "patch"]
        }
    ],
    "postUpdateOptions": ["gomodTidy"]
}
